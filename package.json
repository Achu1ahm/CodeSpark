{
  "name": "codespark",
  "displayName": "CodeSpark",
  "description": "CodeSpark is a VS Code extension that surprises you with cool programming concepts when you feel stuck or bored.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Education",
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-spark-explorer",
          "title": "CodeSpark",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "code-spark-explorer": [
        {
          "id": "codeSparkExplorer",
          "name": "Concepts Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "codespark.openConcept",
        "title": "Open Concept"
      },
      {
        "command": "codespark.filterByLanguage",
        "title": "Filter By Language"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3",
    "ts-loader": "^9.2.5",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  }
}